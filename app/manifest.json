{
    "manifest_version": 3,
    "name": "Salah Time",
    "short_name": "Salah Time",
    "start_url": "/",
    "description": "The Chrome extension to view Muslim prayer local time.",
    "author": "Najmul Huda Wahid",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "icons": [
    {
        "src": "images/icon-512.png",
        "sizes": "512x512",
        "type": "image/png",
        "purpose": "maskable any"
    }
    ],
    "permissions": [
    "geolocation"
    ],
    "display": "fullscreen"
  }